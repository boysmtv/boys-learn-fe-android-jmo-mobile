<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/container"
        android:background="@color/flat_blue_3"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="150dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_carousel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_user_carousel_item1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/iv_home_image"
            android:text="Pendana"
            android:textColor="@color/flat_grey_dark_2"
            android:textSize="@dimen/_16dp" />

        <ImageView
            android:id="@+id/iv_home_image"
            android:layout_width="@dimen/_90dp"
            android:layout_height="@dimen/_90dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logo_jmo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_user_carousel_item1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/flat_yellow_2"
            android:text="Daftar"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:cornerRadius="16dp" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>